<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Star">
        <item name="android:layout_width">@dimen/star_size</item>
        <item name="android:layout_height">@dimen/star_size</item>
        <item name="android:layout_marginLeft">@dimen/star_margin</item>
        <item name="android:layout_marginRight">@dimen/star_margin</item>
        <item name="android:tint">@color/mainOrange</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>
</resources>
